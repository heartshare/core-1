tasks-test.silkky.cloud {
	import secureheader

	@tasksapi path /api* /dav* /.well-known*

	handle @tasksapi {
		reverse_proxy http://vikunja:3456
	}

	handle {
		header {
			Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; frame-ancestors 'self'; base-uri 'self'; form-action 'self';"
		}

		reverse_proxy http://vikunja-web:80
	}
}
